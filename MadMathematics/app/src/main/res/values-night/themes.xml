<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MadMathematics" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/SecondaryComponentRed</item>
        <item name="colorPrimaryVariant">@color/ComponentRed</item>
        <item name="colorOnPrimary">#00FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/BackgroundBlue</item>
        <item name="colorSecondaryVariant">@color/SecondaryBackgroundBlue</item>
        <item name="colorOnSecondary">@color/Highlighter</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="homepagebackground" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient_background_homepage</item>
        <item name="android:statusBarColor">#372B4147</item>
    </style>


    <style name="resultPageBackground" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/BackgroundBlue</item>
        <item name="android:statusBarColor">@color/BackgroundBlue</item>
    </style>


    <style name="DialogCustomTheme" parent="@android:style/Theme.Material.Dialog">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
    </style>


    <style name="ArithmeticBackGround" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/maths_background_edited</item>
    </style>

    <style name="ArithmeticBackGroundOne" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/math_background_right</item>
    </style>

    <style name="GeneralAppStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/BackgroundBlue</item>
    </style>


    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>